{
    "rules": {
        "text-posts": {
            "num-posts": {
                ".read": "auth != null",
                ".write": "auth != null"
            },
            "posts": {
                ".read": "auth != null",
                ".indexOn": "datetime",
                "$id": {
                    ".write": "auth !== null && (!data.exists() || data.child('poster-uid').val() === auth.uid)"
                }
            }
        },
        "user-profiles": {
            "$id": {
                ".read": "auth !== null",
                ".write": "auth !== null && (!data.exists() || data.child('uid').val() === auth.uid)"
            }
        },
        "friend-lists": {
            "$id": {
                ".read": "auth !== null",
                ".write": "auth !== null && (!data.exists() || data.child('uid').val() === auth.uid)"
            }
        }
    }
}
